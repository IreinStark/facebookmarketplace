rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read photos
    match /photos/{allPaths=**} {
      allow read: if true; // Anyone can read photos
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read profile photos
      allow write: if request.auth != null &&
        request.auth.uid == userId; // Users can only upload to their own folder
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
