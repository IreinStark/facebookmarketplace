rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Open uploads to 'images/' folder for authenticated users
    match /images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default deny for other paths
    match /{allOtherPaths=**} {
      allow read, write: if false;
    }
  }
}

